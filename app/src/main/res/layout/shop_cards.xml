                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="Mobile"
                card_view:layout_constraintStart_toEndOf="@+id/mudrika_addr"
                card_view:layout_constraintTop_toBottomOf="@+id/mudrika_name"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/mudrika_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="Address"
                card_view:layout_constraintStart_toEndOf="@+id/mudrika_img"
                card_view:layout_constraintTop_toBottomOf="@+id/mudrika_name"
                tools:ignore="MissingConstraints" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="8dp"
            android:layout_weight="1"
            >

            <ImageView
                android:id="@+id/co_op_img"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
